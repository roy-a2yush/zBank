<%- include('./header.ejs') %>
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
  
                  <form class="mx-1 mx-md-4" action="/login/register" method="POST">
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="form3Example1c" class="form-control" placeholder="First Name" name="firstName" required/>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input type="text" id="form3Example1c2" class="form-control" placeholder="Last Name" name="lastName" required/>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input type="tel" id="form3Example1c3" class="form-control" placeholder="Phone" name="phoneNumber" pattern="[0-9]{10}" required/>
                        </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" id="form3Example3c4" class="form-control" placeholder="Your Email" name="email" required/>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="form3Example4c5" class="form-control" placeholder="Password" name="password1" required/>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="form3Example4cd6" class="form-control" placeholder="Repeat your password" name="password2" onkeyup="passwordValidator()" required/>
                      </div>
                    </div>
  
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <input type="submit" id="submitButton" class="btn btn-primary btn-lg" value="Submit">
                    </div>
  
                  </form>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <p><a class="link-secondary link-opacity-10-hover" href="/login">Login</a></p>
                  </div>
  
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
  
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script>
    function passwordValidator() {
      const password1 = document.getElementById("form3Example4c5").value;
      const password2 = document.getElementById("form3Example4cd6").value;
      const submitButton = document.getElementById("submitButton");

      if (password1.trim() !== password2.trim()) {
        document.getElementById("form3Example4c5").style.border = '5px solid red';
        document.getElementById("form3Example4cd6").style.border = '5px solid red';
        submitButton.disabled = true;
      } else {
        document.getElementById("form3Example4c5").style.border = '';
        document.getElementById("form3Example4cd6").style.border = '';
        submitButton.disabled = false;
      }
    }
  </script>
  <%- include('./footer.ejs') %>